---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
const pageTitle = "Posts";

const postsFetchResponse = await fetch(
  `${Deno.env.get("API_ENDPOINT")}api/mediumpost`
);
const posts = await postsFetchResponse.json();
---

<Layout pageTitle={pageTitle}>
  <div class="gif">
    <img width="300" height="259" alt="RaccoonLaptopGif" src="/blog.webp" />
  </div>
  <h2>Blog</h2>
  <ul role="list" class="link-card-grid">
    {
      posts.map((item) => (
        <Card href={item.uri} image="/blog.png" title={item.title} body="" />
      ))
    }
  </ul>
